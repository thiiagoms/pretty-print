{
    "name": "thiiagoms/pretty-print",
    "description": "Pretty CLI print",
    "authors": [
        {
            "name": "Thiago Silva AKA thiiagoms",
            "email": "thiagom.devsec@gmail.com",
            "homepage": "https://thiiagoms.github.io"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "autoload": {
        "psr-4": {
            "PrettyPrint\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "phpcs": "phpcs --standard=PSR12",
        "phpcbf": "phpcbf --standard=PSR12"
    }
}
